{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "declaration": true,
      "declarationDir": "./dist",
      "noImplicitAny": true,
      "sourceMap": true,
      "lib": ["es2017", "es7", "es6", "dom"],
      "outDir": "./dist",
      "moduleResolution": "node",
      "esModuleInterop": true,
    },
    "include": [
      "src/**/*"
    ],
    "exclude": ["node_module", "dist"]
}